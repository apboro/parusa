        "/api/v1/trips": {
            "get": {
                "tags": [
                    "Рейсы"
                ],
                "summary": "Получить список рейсов на день",
                "description": "Запрос служит для получения списка всех актуальных на запрошенный день экскурсий системы.\n<br> Если не задана дата, ответ будет содержать актуальные рейсы на сегодняшний день",
                "operationId": "9f675998675aab5f78c5da7a9d588770",
                "parameters": [
                    {
                        "name": "date",
                        "in": "query",
                        "description": "Дата рейса, ГГГГ-ММ-ДД",
                        "example": "2024-03-20"
                    },
                    {
                        "name": "excursion_ids[]",
                        "in": "query",
                        "description": "ID экскурсий",
                        "schema": {
                            "type": "array",
                            "items": {
                                "type": "integer"
                            }
                        }
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    },
                    "401": {
                        "description": "Not allowed"
                    }
                }
            }
        },
